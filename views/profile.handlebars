<!-- profile.handlebars -->
<main class="container">
    <header class="profile-header">
        <img src="{{userProfile.profileImage}}" alt="Profile Image" class="profile-image" />
        <h2>Welcome, {{ userProfile.username }}!</h2>
    </header>

    <h3>Your Threads:</h3>
    <ul>
        {{#each threads}}
        <li>
            <h4 class="font-wingdings">{{title}}</h4>
            <p class="font-wingdings">{{content}}</p>
            <a href="/thread/{{id}}" class="btn btn-primary">View Thread</a>
        </li>
        {{/each}}
    </ul>
</main>

<a href="/api/users/profile/create-thread">Create Thread</a>

<style>
    .profile-header {
        display: flex;
        align-items: center;
    }

    .profile-image {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 10px;
    }
</style>
