<!-- profile.handlebars -->
<main class="container">
    <header class="profile-header">
        <img src='/img/photo{{user.id}}.jpg' alt="{{user.username}}" class="profile-image" />
        <h2>Welcome, {{ user.username }}!</h2>
    </header>
         <!-- Add a button to toggle all content font -->
            <button class="toggle-font-button" data-content-type="all">Translate All</button> 

{{#if user.threads}}
    <h3 class="mt-5">Your Threads:</h3>
    <ul id="threads">
        {{#each user.threads as |thread|}}
        <li>
            <h4 class="font-wingdings font-toggle">{{thread.title}}</h4>
            <p class="font-wingdings font-toggle">{{thread.content}}</p>
            <a href="/thread/{{thread.id}}" class="btn btn-primary">View Thread</a>
        </li>
        {{/each}}
    </ul>
{{else}}
<p>you don't have anything yet!</p>
{{/if}}
  <script src="/js/toggle-font.js"></script>
</main>

<a href="/create-thread">Create Thread</a>

<style>
    .profile-header {
        display: flex;
        align-items: center;
    }

    .profile-image {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 10px;
    }
</style>
