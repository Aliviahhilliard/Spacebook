<!-- profile.handlebars -->
<main class="container">
    <header class="profile-header">
        <img src='{{user.image}}' alt="{{user.username}}" class="profile-image" />
        <h2>Welcome, {{ user.username }}!</h2>
    </header>
{{#if user.threads}}
    <h3>Your Threads:</h3>
    <ul>
        {{#each user.threads as |thread|}}
        <li>
            <h4 class="font-wingdings">{{thread.title}}</h4>
            <p class="font-wingdings">{{thread.content}}</p>
            <a href="/thread/{{thread.id}}" class="btn btn-primary">View Thread</a>
        </li>
        {{/each}}
    </ul>
{{else}}
<p>you don't have anything yet!</p>
{{/if}}
</main>

<a href="/create-thread">Create Thread</a>

<style>
    .profile-header {
        display: flex;
        align-items: center;
    }

    .profile-image {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 10px;
    }
</style>
